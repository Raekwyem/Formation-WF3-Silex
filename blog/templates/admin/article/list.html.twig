{% extends "layout.html.twig" %}

{% block title 'Admin items' %}

{% block content %}
	<h1>Gestions Articles</h1>

	<p><a href="{{ path('admin_article_edit') }}">Nouvel article</p>

	<table class="table">
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Header</th>
			<th>Rubrique</th>
			<th width="200px">Actions</th>
		</tr>
		{% for article in articles %}
			<tr>
				<td>{{ article.id }}</td>
				<td>{{ article.title }}</td>
				<td>{{ article.header }}</td>
				<td>{{ article.categoryName }}</td>
				<td>
					<a href="{{ path('admin_article_edit', {id: article.id}) }}" class="btn btn-primary">Modifier</a>
					<a href="{{ path('admin_article_delete', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>
				</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}